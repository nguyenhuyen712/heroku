<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-responsive table-striped table-bordered">
      <thead>
        <tr>
          <th><%= t ".helmet" %></th>
          <th><%= t ".name" %></th>
          <th><%= t ".phone" %></th>
          <th><%= t ".gender" %></th>
          <th><%= t ".accident_time" %></th>
          <th><%= t ".status" %></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @accidents %>
      </tbody>
    </table>
  </div>
  <div class="col-md-12 text-center">
    <%= will_paginate %>
  </div>
</div>
