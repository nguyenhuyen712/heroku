<%= form_for @user, url: yield(:url_path) do |f| %>
  <div class="form-group">
    <%= render "shared/error_messages", object: f.object %>
  </div>
  <div class="form-group">
    <%= f.label t("users.index.name") %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("users.index.email") %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("users.index.phone") %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("users.index.gender") %>
    <%= f.select :gender, options_for_select(@genders),{},
        class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("users.index.blood_group") %>
    <%= f.text_field :blood_group, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("users.index.helmet") %>
    <%= f.text_field :helmet_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("users.index.phone_emergency") %>
    <%= f.text_field :phone_emergency, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("users.index.description") %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
